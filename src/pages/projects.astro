---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Projects • pahone.social">
  <Navbar />

  <section class="max-w-5xl mx-auto pt-32 px-6 text-white">

    <h1 class="text-4xl font-bold mb-10 fade-up">Projects</h1>

    <div class="grid sm:grid-cols-2 gap-6">
      
      <div class="bg-white/5 border border-white/10 rounded-2xl p-6 fade-up fade-delay-1 hover:bg-white/10 transition">
        <h2 class="text-xl font-semibold mb-2">Trading Robots (MT5)</h2>
        <p class="text-gray-300 mb-4">
          Smart algos for automation, indicators, decision logic and hedging systems.
        </p>
        <span class="text-sm text-gray-400">Python • MQL5</span>
      </div>

      <div class="bg-white/5 border border-white/10 rounded-2xl p-6 fade-up fade-delay-2 hover:bg-white/10 transition">
        <h2 class="text-xl font-semibold mb-2">3D Energy-Efficient Blocks</h2>
        <p class="text-gray-300 mb-4">
          Custom honeycomb structures optimized for weight, strength, and insulation.
        </p>
        <span class="text-sm text-gray-400">CAD • Modeling</span>
      </div>

      <div class="bg-white/5 border border-white/10 rounded-2xl p-6 fade-up fade-delay-3 hover:bg-white/10 transition">
        <h2 class="text-xl font-semibold mb-2">Portfolio Website</h2>
        <p class="text-gray-300 mb-4">
          Clean and modern website built with Astro + Tailwind.
        </p>
        <span class="text-sm text-gray-400">Astro • Tailwind</span>
      </div>

    </div>
  </section>
</Layout>
